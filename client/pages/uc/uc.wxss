/* pages/uc/uc.wxss */
.uc-page {
  margin: 54rpx;
}
.userinfo {
  margin-bottom: 48rpx;
}
.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}
.uc-bd {
  margin-left: 32rpx;
  padding-left: 32rpx;
  border-left: 1px solid #999;
}

.uc-card-wrap {
  display: flex;
  flex-wrap:wrap;
  justify-content:space-between;
}
.uc-card {
  background: #e9e9e9;
  border-radius: 4px;
  width: 300rpx;
  height: 360rpx;
  margin-bottom: 60rpx;
  text-align: center;
}
.uc-card--icon {
  width: 176rpx;
  height: 194rpx;
  margin: 40rpx auto 20rpx;
  background: #fff;
}