/* pages/audition/result.wxss */
.result-page {
  color: white;
  text-align: center;
  padding-top: 40rpx;
}
.bannel--bg {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.result-box {
  height:910rpx;
  background: #fff;
  color: rgb(51,51,51);
  border-radius: 4rpx;
  margin-top: 70rpx;
  margin-left: 70rpx;
  padding-top: 110rpx;
  position: relative;
  text-align: center;
  box-sizing: border-box;
  box-shadow: 0 10px 15px rgba(155,155,155, 0.2)
}
.result-btn-group {
  position: absolute;
  bottom: 35rpx;
  left: 0;
  width: 100%;
}
.btn--share,.btn--pic {
  font-size: 14px;
  margin-right: 100rpx;
  margin-left: -20rpx;
}
.btn--pic {
  margin-top: 30rpx;
}
.btn--share {
  text-align: left;
  border-width: 0;
  overflow: hidden;
  box-shadow: none;
  border-radius: 10rpx;
}
.btn--share image {
  position: absolute;
  right: 28rpx;
  top: 22rpx;
}
.share-text{
  position:absolute;
  left:50%;
  text-align:center;
}