/**index.wxss**/
page {
    background: #FFF;
    min-height: 100vh;
    /* display: flex; */
    /* flex-direction: column; */
    /* justify-content: flex-start; */
}
.index-page {
  position: relative;
}
.userinfo {
  padding: 35px 27px 48px 35px;
  min-height:135rpx;
  color: #fff;
}
.userinfo-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.bannel--bg {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.index-card {
  position: relative;
  min-height:300rpx;
  margin-bottom: 50rpx;
  background: #fff;
  color: rgb(51,51,150);
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  margin-left: 70rpx;
  padding: 70rpx 24rpx 70rpx 44rpx;
  text-align: left;
  box-sizing: border-box;
  box-shadow: 0 10rpx 40rpx rgba(155,155,155, 0.3);
}
.tag-new {
  position: absolute;
  right: 0;
  top: 30rpx;
}
.progress {
  position: absolute;
  right: 35rpx;
  bottom: 30rpx;
  width: 250rpx;
}
.progress--bar {
  margin-top: 10rpx;
  position: relative;
  height: 16rpx;
  background: rgb(204, 203, 228);
  border-radius: 8rpx;
}
.progress--bar-line {
  position: absolute;
  left: 0;
  top: 0;
  height: 16rpx;
  background: rgba(0,0,0,.1);
  background: linear-gradient(to right, rgb(51,51,150), rgb(201, 102, 201));
  border-radius: 8rpx;
}