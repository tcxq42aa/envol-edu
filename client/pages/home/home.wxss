/* pages/home/hone.wxss */
.home-page {
  margin: 54rpx;
}
.userinfo {
  margin-bottom: 60rpx;
}
.userinfo-avatar {
  margin: 0 auto;
  display:block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 42rpx;
}
.course-card {
  position: relative;
  margin: 30rpx 45rpx;
  height: 320rpx;
  border-radius: 4px;
  padding: 118rpx 20rpx 40rpx 242rpx;
  box-sizing: border-box;
  pointer-events: none;
  background:#fff;
  box-shadow: 0 10px 20px rgba(155,155,155,.3);
}
.course-card .sub-title {
  color: rgb(153, 153, 153);
}
.course-card.active {
  color: #fff;
  pointer-events: initial;
  background:transparent;
}
.course-card.active .sub-title {
  color: #fff;
  opacity: .5;
}
.course-card--bg {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}
.course-card--cover {
  position: absolute;
  width: 180rpx;
  height: 224rpx;
  bottom: 0;
  left: 37rpx;
  background: #ccc;
  border-radius: 4px;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.course-card--cover > view {
  white-space: nowrap;
}