/* pages/plan/plan.wxss */
page {
  background: #FFD102;
}
.plan-container {
  padding: 20rpx 62rpx 100rpx;
  position: relative;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: #fff;
}
.plan-container.reverse {
  color: #fff;
}
.plan-tabs {
  font-size: 30rpx;
  padding: 0 62rpx;
  height: 72rpx;
  color: rgba(255,255,255,.6);
}
.plan-tab-active {
  color: #fff;
}
.bg-yellow {
  z-index: -1;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.plan-title {
  position: relative;
  text-align: center;
  font-size: 40rpx;
  min-height: 60rpx;
  margin: 0 -62rpx 45rpx;
}
.week-wrap,.month-wrap {
  display: flex;
  margin-bottom: 36rpx;
  font-size: 30rpx;
  flex-wrap: wrap;
}
.week-day,.month-day {
  flex-basis:14.2857%;
  flex-shrink: 0;
  flex-grow: 0;
  text-align: center;
}
.month-wrap {
  margin-bottom: 48rpx;
}
.month-day {
  height: 80rpx;
  font-size: 30rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.month-day .point {
  width: 58rpx;
  height: 58rpx;
  line-height:58rpx;
  border-radius: 50%;
}
.month-day.active.finished .point{
  box-shadow: 0 10rpx 20rpx rgba(252, 147, 61, 0.3);
  background: linear-gradient(to right, rgb(255,209,2), rgb(255,192,38));
  color: #fff;
}
.month-day.active.finished2 .point{
  background: #EBEBEB;
}
.month-day.active.reviewed .point{
  box-shadow: inset 0 0 0 4rpx #fff;
}
.month-day.active.unfinished .point{
  box-shadow: inset 0 0 0 4rpx rgb(116,53,148);
}
.month-day.initial .point {
  box-shadow: none!important;
}
.plans {
  display: flex;
  overflow: auto;
  -webkit-overflow-scrolling : touch; 
  margin:-20rpx;
  padding:20rpx;
}
.plans .item {
  width: 180rpx;
  border-radius:4rpx;
  font-size:0;
  flex-shrink: 0;
}
.plans .item image {
  box-shadow: 0 20rpx 40rpx rgba(155,155,155, .3); 
}
.plans .item + .item {
  margin-left: 46rpx;
}
.plans .item image {
  width: 180rpx;
  height: 242rpx;
}
.statistic {
  display: flex;
  justify-content: space-around;
  padding-bottom: 42rpx;
  margin-bottom: 73rpx;
}
.statistic .item {
  display:flex;
  align-items:center;
}
.tag-mode {
  position: absolute;
  right: 0;
  width: 174rpx;
  top: 20rpx;
  line-height:1.4;
}
.icon-circle {
  display: inline-block;
  /* background: #eee; */
  background-size: contain;
  background-repeat: no-repeat;
  margin-left: 20rpx;
  height: 28rpx;
  width: 28rpx;
}

.icon-finish2 {
  background: #EBEBEB;
  border-radius: 50%;
}

.icon-finish {
  background-image: url(data:image/png;base64,)
