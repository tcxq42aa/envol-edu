/* pages/plan/plan.wxss */
.plan-container {
  padding: 0 62rpx;
}
.plan-title {
  text-align: center;
  font-size: 20px;
  margin-bottom: 45rpx;
}
.week-wrap,.month-wrap {
  display: flex;
  margin-bottom: 36rpx;
  font-size: 15px;
  flex-wrap: wrap;
}
.week-day,.month-day {
  flex-basis:14.2857%;
  flex-shrink: 0;
  flex-grow: 0;
  text-align: center;
}
.month-wrap {
  margin-bottom: 48rpx;
}
.month-day {
  height: 80rpx;
  font-size: 15px;
  display:flex;
  align-items:center;
  justify-content:center;
}
.month-day .point {
  width: 58rpx;
  height: 58rpx;
  line-height:58rpx;
  border-radius: 50%;
}
.month-day.active.finished .point{
  box-shadow: 0 5px 10px rgba(252, 147, 61, 0.3);
  background: linear-gradient(to right, rgb(255,209,2), rgb(255,192,38));
  color: #fff;
}
.month-day.active.finished2 .point{
  background: linear-gradient(to bottom, rgb(51,51,150), rgb(201,102,201));  
   color: #fff; 
}
.month-day.active.unfinished .point{
  box-shadow: inset 0 0 0 2px rgb(116,53,148); 
}
.plans {
  display: flex;
  overflow: auto;
  -webkit-overflow-scrolling : touch; 
}
.plans .item {
  width: 180rpx;
}
.plans .item + .item {
  margin-left: 46rpx;
}
.plans .item image {
  width: 180rpx;
  height: 242rpx;
}
.statistic {
  display: flex;
  justify-content: space-around;
  margin-bottom: 115rpx;
}
.statistic .item {
  display:flex;
  align-items:center;
}
.icon-circle {
  display: inline-block;
  /* background: #eee; */
  background-size: contain;
  background-repeat: no-repeat;
  margin-left: 20rpx;
  height: 26rpx;
  width: 26rpx;
}
